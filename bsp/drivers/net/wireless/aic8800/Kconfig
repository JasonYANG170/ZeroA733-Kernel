config AIC_WLAN_SUPPORT
	bool "AIC wireless Support"
	default n
	help
	  This is support for aic wireless chip.

if AIC_WLAN_SUPPORT
choice
    prompt "Select the interface type of the aic8800."
    default AIC8800_USB

config AIC8800_USB
    bool "AIC8800 USB Support"

config AIC8800_SDIO
    bool "AIC8800 SDIO Support"
    select PLATFORM_ALLWINNER
endchoice

config PLATFORM_ALLWINNER
    bool "AIC8800 Allwinner Support"

if AIC8800_USB
source "$(BSP_TOP)drivers/net/wireless/aic8800/usb/Kconfig"
endif
if AIC8800_SDIO
source "$(BSP_TOP)drivers/net/wireless/aic8800/sdio/Kconfig"
endif
endif
